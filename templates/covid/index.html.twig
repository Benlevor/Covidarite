{% extends 'base.html.twig' %}

{% block title %}Hello CovidController!{% endblock %}

{% block body %}

<section class="annonce">
    {% for annonce in annonces %}
    <annonce>
        <div class="row">
		    <div class="column">
                <h2>{{annonce.title}}</h2>
            </div>
        </div>
        <div class="metadata">Ecrit le {{annonce.createdAt | date('d/m/Y')}} à {{annonce.createdAt | date('H:i')}} par {{annonce.nomComplet | raw}}</div>
        <div class="content">
         <img src="{{annonce.image}}" width="350" length="200" alt="">  <br> </br></div>

		    <h4>Description de l'annonce</h4>
		<div style="text-align: justify;">
            {{annonce.content | raw}} 
        </div>

            <br> </br>


            <div class="column">
                <a href=" {{path('covid_show',{'id':annonce.id})}}" class="btn btn-primary">Voir le détail de l'annonce</a>
                <a href=" {{path('create_comment',{'id':annonce.id})}}" class="btn btn-primary">Laisser un commentaire</a>
            </div>
        </div>
    </annonce>

    {% endfor %}

</section>

{% endblock %}


