{% extends 'base.html.twig' %}
{% form_theme formComment 'bootstrap_4_layout.html.twig'%}

{% block body %}

<h1> Création d'un nouveau commentaire </h1>


    {{form_start(formComment)}}

        <br> </br>
        {{form_row(formComment.author, {'label':'Pseudonyme','attr':
        {'placeholder':"Exemple: Jean Dupont"} 
        })}} 
        <br> </br>
        {{form_row(formComment.content, {'label':'Commentaire','attr':
        {'placeholder':"Laissez votre commentaire"}
        })}}
        <br> </br>

        <button type="submit" class="btn btn-success">
            Commentez !
        </button>

    {{form_end(formComment)}}

    <br> </br>


<annonce>
        <h2>{{annonce.title}}</h2>
        <div class="column">
            <div class="metadata">
                Ecrit le {{annonce.createdAt | date('d/m/Y')}}  à {{annonce.createdAt | date('H:i')}} par {{annonce.nomComplet | raw}}
            </div>

        </div>
        <div class="content">       
            <img src="{{annonce.image}}" width="350" length="200" alt=""> <br> </br> 
        </div>

         <div style="text-align: justify;">   
            {{annonce.content | raw}} 
         </div>

    </annonce>

    <br> </br>

        <h4> 
            Information personelle 
        </h4>
        <ul>
            <li> Nom complet : {{annonce.nomComplet}} </li>
            <br> </br>

            <li> Numéro de téléphone: {{annonce.phoneNumber}} </li>
            <br> </br>

            <li> Email: {{annonce.email}} </li>
            <br> </br>

            <li> Code postal: {{annonce.zipcode}} </li>

            <br> </br>




{% endblock %}
